---
const { number, title } = Astro.props;
---
<div class="flex flex-col">
  <div class="flex">
    <div class="pr-20 w-0">
      <h2 class='text-7xl leading-[0.95]'>{number}</h2>
    </div>
    <div class="flex flex-col">
      <h2 class='text-3xl uppercase'>{title}</h2>
      <p class="text-justify font-extralight">
        <slot/>
      </p>
    </div>
  </div>
</div>
