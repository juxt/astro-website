---
const { imgPos = "left" } = Astro.props
---
<div class={ "container mx-auto max-w-6xl h-96 grid grid-cols-2"}
     {...Astro.props}>
    {
      (imgPos == "left") && <slot name="image"/>
    }
    <div class="p-10">
        <slot/>
    </div>
    {
      (imgPos == "right") && <slot name="image"/>
    }
</div>
