---
import AssetImage from '@components/team/AssetImage.astro'
import Section from '@components/team/Section.astro'
import ContactItem from '@components/team/ContactItem.astro'
import { InvertedGithubIcon, LinkedInIcon, TwitterIcon, EmailIcon } from '@components/Icons'

const {fullName, jobTitle, code, email, twitter, linkedin, github, hackernews } = Astro.props;
---
<Section className='pl-10 pr-0 py-10 grid grid-cols-1 md:grid-cols-2 gap-4' {...Astro.props}>
  <div class="md:pt-20 pr-10">
    <h1 class="text-5xl font-bold">Hello<span class="text-orange-400">.</span></h1>
    <h1 class="justify-end text-3xl font-bold"><span class="text-orange-400">â€”</span> I am {fullName}</h1>
    <h2 class="justify-end text-3xl font-medium">{jobTitle}</h2>
  </div>

  <div class="my-auto ml-auto md:col-start-2 md:row-start-1 md:row-span-2">
    { /* TODO: Make a component, or just bake into the images ðŸ˜… */ }
    <div class="relative w-[30rem] h-[30rem]">
      { /* Tall */ }
      <div class="absolute bottom-0 right-0 bg-amber-300 rounded-full w-1/2 h-full"></div>
      { /* Stout */ }
      <div class="absolute bottom-0 right-1/3 bg-orange-200 rounded-full w-1/2 h-[70%]"></div>
      { /* Lazy */ }
      <div class="absolute bottom-0 left-0 bg-orange-400 rounded-full w-2/3 h-1/4"></div>
      <AssetImage class="absolute bottom-0 w-[90%] h-[90%]"
        src={`/src/assets/team/headshots/${code}.png`} alt={`A headshot of ${fullName}`} />
    </div>

    <div class="pt-5 inline-flex">
      { email &&
      <ContactItem href={"mailto:" + email}>
        <EmailIcon slot="icon" className="w-7"/>
      </ContactItem>
      }
      { twitter &&
        <ContactItem href={"https://twitter.com/" + twitter}>
          <TwitterIcon slot="icon" className="w-7"/>
        </ContactItem>
      }
      { linkedin &&
        <ContactItem href={"https://linkedin.com/in/" + linkedin + "/"}>
          <LinkedInIcon slot="icon" className="w-6"/>
        </ContactItem>
      }
      { github &&
        <ContactItem href={"https://github.com/" + github}>
          <InvertedGithubIcon slot="icon" className="w-9 absolute -bottom-0.5"/>
        </ContactItem>
      }
      { hackernews &&
        <ContactItem href={"https://news.ycombinator.com/user?id=" + hackernews}>
          <svg fill="#000000" slot="icon" class="w-9" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><path d="M 5 5 L 5 27 L 27 27 L 27 5 Z M 7 7 L 25 7 L 25 25 L 7 25 Z M 11.5 11 L 15 17 L 15 22 L 17 22 L 17 17 L 20.5 11 L 18.5 11 L 16 15.28125 L 13.5 11 Z"/></svg>
        </ContactItem>
      }
    </div>

  </div>

  <div class="lg:col-start-1">
    <slot/>
  </div>
</Section>
