---
import AssetImage from '@components/team/AssetImage.astro'
import Layout from '@layouts/Layout.astro'
import ContactUsFormXT24 from '@components/ContactUsFormXT24'
import { LinkedInIcon } from '@components/Icons'
import speakers from '../data/xt24/speakers.json';

const agenda = [
    {
        time: '08:30 AM',
        title: 'Registration & Coffee',
        isSpecialEvent: true,
    },
    {
        time: '09:00 AM',
        title: 'Welcome to XT24',
        subTitle: 'Jon Pither | CEO & Co-founder | JUXT',
        isSpecialEvent: true,
    },
    {
        time: '09:30 AM',
        title: 'Ai: Unintended Consequences',
        subTitle: 'Francine Bennett | Interim Director & Board Member | Ada Lovelace Institute',
    },
    {
        time: '10:00 AM',
        title: 'Breaking the Bank with Contract Testing',
        subTitle: 'Allen Rohner | CTO & Founder | Griffin',
    },
    {
        time: '10:30 AM',
        title: 'Coffee Break',
        isSpecialEvent: true,
    },
    {
        time: '11:00 AM',
        title: 'Tales from the Buy-Side',
        subTitle: 'Kim Johannessen | CTO | Consulting & Advisory',
    },
    {
        time: '11:30 AM',
        title: 'Data Collaboration and Price Discovery for the Commodities Market',
        subTitle: [
            'Sebastian Ferraccù | CEO & Co-founder | Artis.Works',
            'Manpreet Babbra | CTO | Artis.Works',
        ],
    },
    {
        time: '12:00 PM',
        title: 'Lunch',
        isSpecialEvent: true,
    },
    {
        time: '01:30 PM',
        title: 'Financial Use-Cases for an Immutable Database',
        subTitle: [
            'Malcolm Sparks | CTO & Co-founder | JUXT',
            'Jeremy Taylor | Head of Product | XTDB',
        ],
    },
    {
        time: '02:00 PM',
        title: 'We Need to Talk About JSON',
        subTitle: 'Oliver Hine | Principal Consultant | JUXT',
    },
    {
        time: '02:30 PM',
        title: 'Coffee Break',
        isSpecialEvent: true,
    },
    {
        time: '03:00 PM',
        title: 'XT28 — SCHEDULE (FIRESIDE CHAT)',
        subTitle: [
            'Vlad Yatsenko | CTO & Co-founder | Revolut',
            'Francine Bennett | Director | Ada Lovelace Institute',
            'Malcolm Sparks | CTO & Co-founder | JUXT',
            'Moderator: Jason Bloomberg | Managing Partner | Intellyx',
        ],
    },
    {
        time: '03:30 PM',
        title: 'Not So Clever - How we Built a Global-Scale Successful Risk System Guided by Simplicity',
        subTitle: 'Zohar Melamed | Quantitative Technical Dir. | Qube RT',
    },
    {
        time: '04:00 PM',
        title: 'Networking Event',
        subTitle: 'Attendees are welcome to an afternoon of networking and mingling — with exclusive access to the venue’s Sky Bar, complete with drinks and food.',
        isSpecialEvent: true,
    },
];
---
<Layout title='XT24 Fintech Conference - Agenda' noFooter>
  <div class="bg-zinc-800">
    <div class='container max-w-6xl mx-auto min-h-screen flex flex-col text-white'>
      <!-- JUXT Logo -->
      <div class="w-full p-5 sm:p-10 flex flex-row justify-end">
        <a href="/">
          <img width={100} src="/images/logo-on-dark.svg" alt="JUXT Logo" />
        </a>
      </div>

      <!-- XT24 Logo & copy -->
      <div class="grid grid-cols-1 lg:grid-cols-2 p-5 sm:px-10 lg:pb-16">
        <a href="/xt24" class="cursor-pointer">
          <div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-1">
              <img src="/images/XT24.png" alt="XT24 Logo" />
              <h1 class="text-juxt text-4xl md:text-6xl font-bold uppercase">FinTech <br/> Conference</h1>
            </div>
            <p class="w-full font-semibold sm:font-normal sm:text-xl uppercase">
              Scaling Simplicity in Financial Technology
            </p>
            <p class="w-full pt-5">
              Want to join us? Register <span class="underline text-juxt">here</span>
            </p>
          </div>
        </a>
      </div>

      <!-- Main content -->
      <div class="flex flex-col sm:p-10">
        {
            agenda.map(({ time, title, subTitle, isSpecialEvent }) => (
                <div class:list={["grid grid-cols-1 sm:grid-cols-5 sm:divide-x sm:divide-juxt", {"bg-zinc-900": isSpecialEvent}]}>
                    <p class="px-5 pt-5 sm:p-5 font-semibold text-lg align-text-top">{time}</p>
                    <div class="px-5 pb-5 sm:p-5 sm:col-span-4">
                        <h2 class="font-light text-lg text-juxt uppercase">{title}</h2>
                        {
                            (Array.isArray(subTitle) ? subTitle : [subTitle])
                                .map((s) => <p class="font-light text-lg">{s}</p>)
                        }
                    </div>
                </div>
            ))
        }
      </div>

      <!-- Speakers -->
      <div class="flex flex-col p-5 sm:pt-20 gap-6 items-center sm:items-start">
        <h2 class="uppercase text-juxt font-semibold sm:font-normal sm:text-xl">Speakers</h2>
        <div class="flex flex-wrap gap-4 justify-center">
          { speakers.map(({name, role, company, image, linkedin, }) => (
            <a href={linkedin && `https://www.linkedin.com/in/${linkedin}`} target="_blank">
              <div class="flex flex-col items-center">
                <AssetImage class="mx-3 w-44 h-64 object-cover object-center" src={image} alt={`Headshot of ${name}`} />
                <div class="flex items-center gap-2">
                  <h3>{name}</h3>
                  { linkedin && <LinkedInIcon className="w-3 h-3 fill-cyan-700" /> }
                </div>
                <p class="font-extralight text-xs">{role}</p>
                <p class="font-extralight text-xs">{company}</p>
              </div>
            </a>
          ))}
        </div>
        <p class="w-full font-semibold sm:font-normal sm:text-xl text-center">
          More speakers to be announced soon
        </p>
      </div>
    </div>
  </div>
</Layout>
